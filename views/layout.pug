doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')

body
  nav
    div.navbuttons
      ul
        li
          //- Show "Create user" button only when user is not logged in
          if !loggedIn
            button(onclick="rdCreateUser()") Create user
            script.
              function rdCreateUser() {
                window.location.href = '/createUser';
              }

        li
          //- Show "Log In" button only when user is not logged in
          if !loggedIn
            button(onclick="rdLogin()") Log In
            script.
              function rdLogin() {
                window.location.href = '/login';
              }

        li
          //- Show "Log Out" button only when user is logged in
          if loggedIn
            button(onclick="deleteTokenAndRedirect()") Log Out
            script.
              function deleteTokenAndRedirect() {
                document.cookie = 'token=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;';
                console.log('Token deleted');
                window.location.href = '/login';
              }

        li
          div.logo-container
            img.logo(src='images/lapras_pokemon.jpg', alt='Company Logo')

        li
          button(onclick="rdForside()") Generate
          script.
            function rdForside() {
              window.location.href = '/Generate';
            }

        li
          button(onclick="rdMinside()") My Team
          script.
            function rdMinside() {
              window.location.href = '/myteam';
            }
    block content